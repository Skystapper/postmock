---
import PreviewEmbed from "./PreviewEmbed.astro";
---

<div class="tab-pane fade" id="instagram-tab">
  <div class="row w-100">
    <div class="col-12 col-md-6">
      <div class="input-group mb-2">
        <span class="input-group-text">Username:</span>
        <input 
          id="ig-username-input" 
          type="text" 
          class="form-control" 
          placeholder="johndoe" 
        />
      </div>

      <div class="form-check mb-2 ms-1">
        <input 
          id="ig-verified-input" 
          class="form-check-input" 
          type="checkbox" 
          checked 
        />
        <label class="form-check-label">Verified</label>
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Location:</span>
        <input 
          id="ig-location-input" 
          type="text" 
          class="form-control" 
          placeholder="New York, NY" 
        />
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Caption:</span>
        <input 
          id="ig-caption-input" 
          type="text" 
          class="form-control" 
          placeholder="Write a caption..." 
        />
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Likes:</span>
        <input 
          id="ig-likes-input" 
          type="text" 
          class="form-control" 
          placeholder="1,234" 
        />
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Date:</span>
        <input 
          id="ig-date-input" 
          type="text" 
          class="form-control" 
          placeholder="JANUARY 1, 2024" 
        />
      </div>

      <div class="input-group mb-2">
        <label class="input-group-text">Theme:</label>
        <select id="ig-theme-input" class="form-select">
          <option value="light" selected>Light</option>
          <option value="dark">Dark</option>
        </select>
      </div>
    </div>

    <div class="col col-md-6">
      <PreviewEmbed platform="instagram" previewSrc="/api-instagram" />
    </div>
  </div>
</div> 