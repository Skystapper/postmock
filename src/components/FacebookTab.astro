---
import PreviewEmbed from "./PreviewEmbed.astro";
---

<div class="tab-pane fade" id="facebook-tab">
  <div class="row w-100">
    <div class="col-12 col-md-6">
      <div class="input-group mb-2">
        <span class="input-group-text">Username:</span>
        <input 
          id="fb-username-input" 
          type="text" 
          class="form-control" 
          placeholder="John Doe" 
        />
      </div>

      <div class="form-check mb-2 ms-1">
        <input 
          id="fb-verified-input" 
          class="form-check-input" 
          type="checkbox" 
          checked 
        />
        <label class="form-check-label">Verified</label>
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Text:</span>
        <input 
          id="fb-text-input" 
          type="text" 
          class="form-control" 
          placeholder="Write something..." 
        />
      </div>

      <div class="input-group mb-2">
        <label class="input-group-text">Privacy:</label>
        <select id="fb-privacy-input" class="form-select">
          <option value="Public" selected>Public</option>
          <option value="Friends">Friends</option>
          <option value="Only me">Only me</option>
        </select>
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Reactions:</span>
        <input 
          id="fb-reactions-input" 
          type="text" 
          class="form-control" 
          placeholder="1.2K" 
        />
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Comments:</span>
        <input 
          id="fb-comments-input" 
          type="text" 
          class="form-control" 
          placeholder="234" 
        />
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Shares:</span>
        <input 
          id="fb-shares-input" 
          type="text" 
          class="form-control" 
          placeholder="56" 
        />
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text">Date:</span>
        <input 
          id="fb-date-input" 
          type="text" 
          class="form-control" 
          placeholder="3 hours ago" 
        />
      </div>

      <div class="input-group mb-2">
        <label class="input-group-text">Theme:</label>
        <select id="fb-theme-input" class="form-select">
          <option value="light" selected>Light</option>
          <option value="dark">Dark</option>
        </select>
      </div>
    </div>

    <div class="col col-md-6">
      <PreviewEmbed platform="facebook" previewSrc="/api-facebook" />
    </div>
  </div>
</div> 